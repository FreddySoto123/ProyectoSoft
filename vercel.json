{
  "version": 2,
  "builds": [
    {
      "src": "barbersmart-backend/index.js", 
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/barbersmart-backend/index.js" 
    },
    {"handle": "filesystem"},
    {"src": "/(.*)", "dest": "/index.html"}
  ]
}