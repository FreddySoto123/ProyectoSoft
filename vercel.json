{
  "version": 2,
  "builds": [
    {
      "src": "barbersmart-backend/package.json",
      "use": "@vercel/node",
      "config": {
        "project": "barbersmart-backend"
      },
      "outputDirectory": "api"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "web-build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/barbersmart-backend/index.js"
    },
    {"handle": "filesystem"},
    {"src": "/(.*)", "dest": "/index.html"}
  ]
}
